<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RegraMotivoNaoQualificacao</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;Unqualified&quot;),
    ISBLANK(TEXT(MotivoNaoQualificado__c))
)</errorConditionFormula>
    <errorDisplayField>MotivoNaoQualificado__c</errorDisplayField>
    <errorMessage>Para alterar o status para &quot;Não Qualificado&quot;, o campo: &quot;Motivo da Não Qualificação&quot; deve estar preenchido!</errorMessage>
</ValidationRule>
